<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BoardComment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/line_shape"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/Com_1"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/Comment_photo"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:layout_marginLeft="10sp"
                        android:scaleType="centerCrop"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="1sp" />

                    <TextView
                        android:id="@+id/Comment_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="20sp"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        tools:text="닉네임입니다" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="6" />

                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ToggleButton
                            android:id="@+id/like_button"
                            android:layout_width="match_parent"
                            android:layout_height="17dp"
                            android:background="@drawable/ic_baseline_favorite_24"
                            android:checked="false"
                            android:text=""
                            android:textOff=""
                            android:textOn="" />

                        <TextView
                            android:id="@+id/like_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="10"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/Comment_title"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:layout_marginLeft="20sp"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/ic_baseline_add_shopping_cart_24"
                    android:drawablePadding="12dp"
                    tools:text="제목입니다" />

                <TextView
                    android:id="@+id/Comment_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginBottom="10sp"
                    android:layout_marginTop="10sp"
                    android:drawableStart="@drawable/ic_baseline_123_24"
                    android:drawablePadding="6dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    tools:text="본문내용입니다" />
                <TextView
                    android:id="@+id/price_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginBottom="10sp"
                    android:textColor="@android:color/black"
                    android:drawableStart="@drawable/ic_outline_money_24"
                    android:drawablePadding="6dp"
                    android:textSize="16sp"
                    tools:text="가격내용입니다" />
                <TextView
                    android:id="@+id/address_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginBottom="10sp"
                    android:drawableStart="@drawable/ic_baseline_location_on_24"
                    android:drawablePadding="6dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    tools:text="주소내용입니다" />

                <ImageView
                    android:id="@+id/Comment_photo2"
                    android:layout_width="147dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10sp"
                    app:srcCompat="@drawable/camera_background" />

                <TextView
                    android:id="@+id/phone_text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginBottom="10sp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/ic_baseline_call_24"
                    tools:text="전화번호" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout10"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/line_shape"
                android:orientation="vertical">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/comment_recycler"
                android:layout_width="match_parent"
                android:layout_height="133dp"
                android:layout_margin="10sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/line_shape"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/Edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText_name"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/Edit_comment"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:editable="true"
            android:hint="Write Comment" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/comment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="right"
            android:src="@drawable/ic_baseline_create_24"
            app:backgroundTint="#FFFFFF" />

    </LinearLayout>

</LinearLayout>

