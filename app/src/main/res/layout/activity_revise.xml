<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="12"
    android:background="@drawable/line_shape"
    android:layout_marginTop="8sp"
    android:layout_marginBottom="8sp"
    tools:context=".boardupActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Board_write_title"
            android:layout_width="401dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_add_shopping_cart_24"
            android:drawablePadding="12dp"
            android:hint="상품명"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <EditText
        android:id="@+id/edittext_price2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginRight="11dp"
        android:layout_weight="1"
        android:drawableStart="@drawable/ic_outline_money_24"
        android:drawablePadding="6dp"
        android:hint="가격"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/Board_write_contents"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginRight="11dp"
        android:hint="재고"
        android:drawableStart="@drawable/ic_baseline_123_24"
        android:drawablePadding="6dp"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/Board_write_phone2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginRight="11dp"
        android:hint="전화번호"
        android:drawableStart="@drawable/ic_baseline_call_24"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/Board_write_address"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginRight="11dp"
        android:hint="주소"
        android:drawableStart="@drawable/ic_baseline_location_on_24"
        android:drawablePadding="6dp"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_weight="4"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/board_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@android:drawable/alert_dark_frame" />

        <ProgressBar
            android:id="@+id/board_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/Board_photo"
            android:layout_width="48dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_add_photo" />

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <Button
            android:id="@+id/Board_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Save" />
    </LinearLayout>


</LinearLayout>