<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:paddingLeft="10sp"
    android:background="@drawable/line_shape_color"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/board_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8sp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Title" />

        <TextView
            android:id="@+id/board_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8sp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:text="Contents" />

        <TextView
            android:id="@+id/board_writer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8sp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            tools:text="writer"/>

    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginRight="10sp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_favorite_24" />

        <TextView
            android:id="@+id/board_liketext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="10"
            android:textStyle="bold" />

    </LinearLayout>
    <ImageView
        android:id="@+id/board_imageView"
        android:layout_width="90dp"
        android:layout_height="90sp"
        android:layout_gravity="center"
        android:layout_marginRight="20sp"
        app:srcCompat="?attr/colorBackgroundFloating" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_gravity="bottom"
        android:layout_marginRight="10sp"
        android:orientation="vertical">



        <TextView
            android:id="@+id/board_address"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_margin="9sp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="address" />
        <TextView
            android:id="@+id/price_text2"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_margin="9sp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="price" />
    </LinearLayout>

</LinearLayout>

